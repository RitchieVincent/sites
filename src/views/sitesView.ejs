<% layout('layout') -%>

<div class="container">

    <div class="card">

        <div class="btn  btn--primary"><a href="/sites">Back</a></div>

        <div class="btn  btn--primary  modify"><a href="/admin/modify/<%= site._id %>">Modify</a></div>

        <h1 class="siteTitle"><%= site.title %></h1>

        <img class="image--main" src="http://www.propcom.co.uk/assets/img/home/hero/pingpong-hero.jpg">

        <p class="siteId">Site ID: <%= site.siteId %></p>

        <h2 class="builtBy">Built by: <%= site.developer %></h2>

        <h2 class="designer">Designer: <%= site.designer %></h2>

        <h2 class="accountManager">Account Manager: <%= site.am %></h2>

        <p>Tags: </p>

        <div class="tags">
            <% for(var i=0; i<site.tags.length;i++){ %>

                <p><%= site.tags[i] %></p>

            <% } %>
        </div>

        <br>

        <div class="divider"></div>

    </div>

</div>